<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.SaveEasy.FullscreenContainer"
    android:background="@color/gray50"
    tools:context=".ui.resetpassword.ResetPasswordFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="715dp"
        android:id="@+id/reset_ConsLayControls"
        android:paddingHorizontal="20dp">


        <TextView
            android:id="@+id/reset_header"
            android:layout_width="174dp"
            android:layout_height="42dp"
            android:layout_marginTop="76dp"
            android:paddingHorizontal="10dp"
            android:text="@string/enter_code"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/label_resendcode"
            android:layout_width="305dp"
            android:layout_height="22dp"
            android:layout_marginBottom="156dp"
            android:paddingHorizontal="10dp"
            android:text="@string/label_4digitd"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/usernameLayout"
            app:layout_constraintStart_toStartOf="@+id/welcome" />

        <TextView
            android:id="@+id/resendcode"
            android:layout_width="122dp"
            android:layout_height="26dp"
            android:layout_marginEnd="40dp"
            android:paddingHorizontal="10dp"
            android:text="@string/resend_code_in"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/welcome"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/usernameLayout"
            android:layout_width="347dp"
            android:layout_height="86dp"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/label_resendcode"
            app:layout_constraintTop_toTopOf="parent">


            <EditText
                android:id="@+id/input_d1"
                android:layout_width="79dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:autofillHints=""
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/_0"
                android:inputType="number"
                android:paddingHorizontal="30dp"
                android:textColorHint="@color/black"
                tools:layout_editor_absoluteY="217dp" />

            <EditText
                android:id="@+id/input_d2"
                android:layout_width="79dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:autofillHints=""
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/_0"
                android:inputType="number"
                android:paddingHorizontal="30dp"
                android:textColorHint="@color/black"
                tools:layout_editor_absoluteY="217dp" />

            <EditText
                android:id="@+id/input_d3"
                android:layout_width="79dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:autofillHints=""
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/_0"
                android:inputType="number"
                android:paddingHorizontal="30dp"
                android:textColorHint="@color/black"
                tools:layout_editor_absoluteY="217dp" />

            <EditText
                android:id="@+id/input_d4"
                android:layout_width="79dp"
                android:layout_height="71dp"
                android:layout_marginHorizontal="5dp"
                android:autofillHints=""
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/_0"
                android:inputType="number"
                android:paddingHorizontal="30dp"
                android:textColorHint="@color/black"
                tools:layout_editor_absoluteY="217dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/txt_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="72dp"
            android:text="@string/label_resend_code"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btn_cont"
            app:layout_constraintStart_toStartOf="@+id/usernameLayout"
            app:layout_constraintTop_toBottomOf="@+id/usernameLayout"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_cont"
            android:layout_width="366dp"
            android:layout_height="51dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="108dp"
            android:background="@color/green500"
            android:text="@string/label_continue"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/usernameLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>